        div[data-section-id="{{ section.id }}"] .ideal-image-hero-1__button {
            border: 1px solid {{ section.settings.background_color }} !important;
            color: {{ section.settings.background_color }} !important;
            background-color: {{ section.settings.foreground_color }} !important;
        }

        div[data-section-id="{{ section.id }}"] .ideal-image-hero-1__button:hover {
            {% comment %} border: 1px solid {{ section.settings.foreground_color }} !important;     {% endcomment %}
            border: 1px solid {{ section.settings.button_hover_foreground }} !important;
            color: {{ section.settings.button_hover_foreground }} !important; 
            background-color: {{ section.settings.button_hover_background }} !important;
            opacity: 1 !important;
        }

        @media screen and (max-width: 767px) {
                div[data-section-id="{{ section.id }}"] .ideal-image-hero-1__image {
                min-height: {{ section.settings.vertical_size_mobile }}vh !important;
            }
        }
  
{%- endstyle %}

{%- if section.settings.image != blank and section.settings.image_position == "right" -%} 
<style>
  @media screen and (max-width: 767px) {
    div[data-section-id="{{ section.id }}"] .ideal-image-hero-1__center {
      flex-direction: column-reverse;    
  }
}
</style>
{%- endif %}


<div
  data-section-id="{{ section.id }}"
  data-section-type="ideal-image-hero-1"
  class="ideal-image-hero-1"
  style="background-color: {{ section.settings.background_color }}; color: {{ section.settings.foreground_color }}; padding-top: 1px;" 
>
    <div class="ideal-image-hero-1__center">
    {%- if section.settings.image != blank and section.settings.image_position == "left" -%} 
        <div class="ideal-image-hero-1__image-container" style="background-color: {{ section.settings.background_color }}; width: 50%;">
          <div class="ideal-image-hero-1__image lazy-load"
            style="background-image: url({{ section.settings.image | img_url: 'master' }});
              min-height: {{ section.settings.vertical_size_desktop }}vh;
              margin: {{ section.settings.image_margin }}px;
              border-radius: {{ section.settings.image_border_radius }}px;
              {% if section.settings.image_focal_point == "top" %}
                background-position: 50% 35% !important;
              {% elsif section.settings.image_focal_point == "middle" %}
                background-position: 50% 50% !important;
              {% elsif section.settings.image_focal_point == "bottom" %}
                background-position: 50% 65% !important;
              {% endif %}                
            ">
            {% comment %} <img src="{{ section.settings.image | img_url: 'master' }}"> {% endcomment %}
          </div>
        </div>
      {%- endif %}

      <div class="ideal-image-hero-1__text-container" style="
        {%- if section.settings.text_vertical_alignment == "top" %}margin-bottom: auto;  {%- endif %}
        {%- if section.settings.text_vertical_alignment == "middle" %}margin-top: auto; margin-bottom: auto; {%- endif %}
        {%- if section.settings.text_vertical_alignment == "bottom" %}margin-top: auto; {%- endif %}

        vertical-align: {{ section.settings.text_vertical_alignment}}; {%- if section.settings.image_position == "left" %}width: 49%;{%- else %}width: 50%;{%- endif %}">

        {%- if section.settings.preheading != blank -%}
          <h4 class="ideal-image-hero-1__preheading">{{ section.settings.preheading }}</h2>
        {%- endif -%}
    
        {%- if section.settings.heading != blank -%}
          <h2 class="ideal-image-hero-1__heading">{{ section.settings.heading }}</h2>
        {%- endif -%}

        {%- if section.settings.subheading != blank -%}
          <div class="ideal-image-hero-1__subheading">{{ section.settings.subheading }}</div>
        {%- endif -%}

        {%- if section.settings.content != blank -%}
          <div class="ideal-image-hero-1__content">{{ section.settings.content }}</div>
        {%- endif -%}

        {%- if section.settings.button_link != blank -%}
          <div class="ideal-image-hero-1__button-container">
            <a href="{{ section.settings.button_link }}" class="btn btn--primary ideal-image-hero-1__button">
              {{ section.settings.button_label | escape }}
            </a>
          </div>
        {%- endif -%}
      </div>
    
      {%- if section.settings.image != blank and section.settings.image_position == "right" -%} 
        <div class="ideal-image-hero-1__image-container" style="background-color: {{ section.settings.background_color }}">
          <div class="ideal-image-hero-1__image lazy-load"
            style="background-image: url({{ section.settings.image | img_url: 'master' }});
              min-height: {{ section.settings.vertical_size_desktop }}vh;
              margin: {{ section.settings.image_margin }}px;
              border-radius: {{ section.settings.image_border_radius }}px;
              {% if section.settings.image_focal_point == "top" %}
                background-position: 50% 35% !important;
              {% elsif section.settings.image_focal_point == "middle" %}
                background-position: 50% 50% !important;
              {% elsif section.settings.image_focal_point == "bottom" %}
                background-position: 50% 65% !important;
              {% endif %}                
            ">
            {% comment %} <img src="{{ section.settings.image | img_url: 'master' }}"> {% endcomment %}
          </div>
        </div>
      {%- endif %}

    </div>
</div>


{% schema %}
  {
    "name": "Ideal Image Hero 1",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image Tile"
      },
  //    {
  //      "type": "video",
  //      "id": "video",
  //      "label": "Video Tile"
  //    },
      {
        "type": "range",
        "id": "vertical_size_desktop",
        "min": 40,
        "max": 100,
        "step": 1,
        "unit": "vh",
        "label": "Desktop Image Vertical Size (vh)",
        "default": 70
      },
      {
        "type": "range",
        "id": "vertical_size_mobile",
        "min": 20,
        "max": 100,
        "step": 1,
        "unit": "vh",
        "label": "Mobile Image Vertical Size (vh)",
        "default": 70
      },
      {
        "type": "range",
        "id": "image_margin",
        "min": 0,
        "max": 50,
        "step": 1,
        "unit": "px",
        "label": "Image Margin (px)",
        "default": 0
      },
      {
        "type": "range",
        "id": "image_border_radius",
        "min": 0,
        "max": 60,
        "step": 1,
        "unit": "px",
        "label": "Image Border Radius (px)",
        "default": 0
      },
      {
        "type": "color",
        "id": "background_color",
        "label": "Background Color",
        "default": "#DCDCDC"
      },
      {
        "type": "color",
        "id": "foreground_color",
        "label": "Foreground Color",
        "default": "#5B5B5B"
      },
      {
        "type": "color",
        "id": "button_hover_background",
        "label": "Button Hover Background",
        "default": "#f8cb00"
      },
      {
        "type": "color",
        "id": "button_hover_foreground",
        "label": "Button Hover Foreground",
        "default": "#5B5B5B"
      },
      {
        "type": "select",
        "id": "image_position",
        "label": "Image Position",
        "default": "left",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "right",
            "label": "Right"
          }
        ]
      },
      {
        "type": "select",
        "id": "image_focal_point",
        "label": "Image Focal Point",
        "default": "middle",
        "options": [
          {
            "value": "top",
            "label": "Top"
          },
          {
            "value": "middle",
            "label": "Middle"
          },
          {
            "value": "bottom",
            "label": "Bottom"
          }
        ]
      },

      {
        "type": "select",
        "id": "text_vertical_alignment",
        "label": "Text Vertical Alignment",
        "default": "top",
        "options": [
          {
            "value": "top",
            "label": "Top"
          },
          {
            "value": "middle",
            "label": "Middle"
          },
          {
            "value": "bottom",
            "label": "Bottom"
          }
        ]
      },
      {
        "type": "text",
        "id": "preheading",
        "label": "Preheading",
        "default": "Preheading"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Heading"
      },
      {
        "type": "text",
        "id": "subheading",
        "label": "Subheading",
        "default": "Subheading"
      },
      {
        "type": "richtext",
        "id": "content",
        "label": "Content",
        "default": "<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</p>"
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "Button Label",
        "default": "Button Label"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button link"
      }
    ],
    "presets": [
      {
        "name": "Ideal Image Hero 1",
        "category": "Image",
        "settings": {
          "image": "",
          "heading": "",
          "subheading": "",
          "button_label": "",
          "button_link": ""
        }
      }
    ]
  }
{% endschema %}
